@model masood_lab.Models.RegistrationModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/master.cshtml";
}

<h2>Update</h2>
<br />
@using (Html.BeginForm("Update", "RegisterBook", FormMethod.Post))
{

    <div class="form-group row">
        <div class="col-sm-2 mb-3 mb-sm-0">
            @Html.HiddenFor(a => a.registrationID)
            <label>Registration ID</label>       
            @Html.TextBoxFor(a => a.registrationID, null, new { @class = "form-control ", required = "required", @disabled = "disabled" })

        </div>
    </div>
    <div class="form-group row">

        <div class="col-sm-3 mb-3 mb-sm-0">
            <label>Book Name</label><br />
            @*@Html.TextBoxFor(a => a.BooksID, null, new { @class = "form-control ", required = "required"})*@

            @Html.DropDownListFor(a => a.BooksID, ViewBag.bookscategory as IEnumerable<SelectListItem>, "Please select Book", new { @class = "btn btn-theme dropdown-toggle ", required = "required" })
            @Html.ValidationMessageFor(a => a.BooksID, null, new { @class = "Errormessage" })


        </div>

        <div class="col-sm-3 mb-3 mb-sm-0">
            <label>Member Name</label><br />
            @Html.DropDownListFor(a => a.MemberID, ViewBag.memberscategory as IEnumerable<SelectListItem>, "Please select Member", new { @class = "btn btn-theme dropdown-toggle ", required = "required" })
            @Html.ValidationMessageFor(a => a.MemberID, null, new { @class = "Errormessage" })

            @*@Html.TextBoxFor(a => a.MemberID, null, new { @class = "form-control ", required = "required" })*@

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4 col-xs-11">
            <label>Issued Date</label>
            @Html.TextBoxFor(a => a.IssuedDate, new { @class = "form-control form-control-inline input-medium default-date-picker ", placeholder = "DD-MM-YY" })
            @Html.ValidationMessageFor(a => a.registrationID, null, new { @class = "Errormessage" })


        </div>
        <div class="col-md-4 col-xs-11">
            <label>Expiry Date</label>
            @Html.TextBoxFor(a => a.ExpiryDate, new { @class = "form-control form-control-inline input-medium default-date-picker ", placeholder = "DD-MM-YY" })
            @Html.ValidationMessageFor(a => a.registrationID, null, new { @class = "Errormessage" })


        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="form-grp row">
        <div class="col-sm-2">
            <input type="submit" value=" Register" class="btn btn-primary btn-block" />

        </div>
        <div class="col-sm-2">
            <input type="reset" value=" reset" class="btn btn-primary btn-block" />

        </div>
    </div>
    <hr>
}

