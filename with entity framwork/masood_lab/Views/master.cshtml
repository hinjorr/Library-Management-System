                        </ul>
                    </li>

                    @*Member*@
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-desktop"></i>
                            <span>Members Panel</span>
                        </a>
                        <ul class="sub">
                            <a class="collapse-item" href="@Url.Action("AddMember","Member")">Add New Member</a>
                            <a class="collapse-item" href="@Url.Action("ViewMember","Member")">View all Members</a>

                        </ul>
                    </li>

                    @*Books*@
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-cogs"></i>
                            <span>Books Panel</span>
                        </a>
                        <ul class="sub">
                            <a class="collapse-item" href="@Url.Action("Addbook","Books")">Add New Book</a>
                            <a class="collapse-item" href="@Url.Action("Viewbook","Books")">View all Books</a>

                        </ul>
                    </li>

                    @*Books Registration*@
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-magic"></i>
                            <span>Registration </span>
                        </a>
                        <ul class="sub">
                            <a class="collapse-item" href="@Url.Action("Register", "RegisterBook")">Register Book</a>
                            <a class="collapse-item" href="@Url.Action("ViewRegister", "RegisterBook")">View Registrations</a>

