    </div>

    <div class="form-grp row">
        <div class="col-sm-2">
            @*<input type="submit" value=" submit" class="btn btn-primary btn-block" onclick="laptop()"/>*@
            <button ype="submit" class="btn btn-primary btn-block" >Submit</button>
        </div>
        <div class="col-sm-2">

            <input type="reset" value=" reset" class="btn btn-primary btn-block" />

        </div>
    </div>
    <hr>
}




