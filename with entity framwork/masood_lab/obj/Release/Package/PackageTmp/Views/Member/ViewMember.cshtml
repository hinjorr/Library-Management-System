@model IEnumerable<masood_lab.Models.MemberModel>

@{    
    Layout = "~/Views/master.cshtml";
}



<h3>View Member  <label id="success" class="label label-success" style="font-size:small;display:none">@ViewBag.Message</label>
                 <label id="error" class="label label-danger" style="font-size:small;display:none">@ViewBag.Error</label>
  </h3>


<div class="content-panel">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">

            <thead>
                <tr>
                    <th>ID</th>   
                    <th>Name</th>            
                    <th>Last Name</th>
                    <th>Phonenumber</th>
                    <th>NIC number</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Action</th>
               
                </tr>
            </thead>
            <tbody>
                 @foreach(var member in Model)
                 { 
                <tr class="gradeX">
                    <td>@member.memberID</td>
                    <td>@member.Firstname</td> 
                    <td>@member.Lastname</td>
                    <td>@member.Phonenumber</td>
                    <td>@member.NIC</td>
                    <td>@member.Address</td>
                    <td>@member.Email</td>
                    <td>@member.Date_of_birth</td>
                    <td>@member.Gender</td>   
                    <td>
                        <a class="label label-success" href="@Url.Action("UpdateMember", "Member", new { FID = @member.memberID })">Update <i class="fa fa-edit"></i></a><br />
                        <a class="label label-danger" href="@Url.Action("DeleteMember", "Member", new { FID = @member.memberID })">Delete <i class="fa fa-trash"></i></a>

                    </td>
                 </tr>
              
                 }
           
            </tbody>
        </table>
    </div>
</div>
<br /><br />

<script type="text/javascript">
    window.onload = function () {

        if ("@ViewBag.Message" != "") {
            document.getElementById('success').style.display = 'inline';
            var duration = 5000;
            setTimeout(function () { $('#success').hide(); }, duration);
        }
        else if ("@ViewBag.Error" != "") {
            document.getElementById('error').style.display = 'inline';
            var duration = 5000;
            setTimeout(function () { $('#error').hide(); }, duration);
        }

    }

</script>


